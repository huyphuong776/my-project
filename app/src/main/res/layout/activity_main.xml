<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="368dp"
    android:layout_height="495dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RatingBar
        android:id="@+id/ratingBarPhucvu"
        style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ratingBarDungGio"
        android:layout_alignTop="@+id/Phuc_vu"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:id="@+id/Phuc_vu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tennhaxe"
        android:layout_marginTop="18dp"
        android:textSize="25sp"
        android:text="Phục vụ      :" />

    <RatingBar
        android:id="@+id/ratingBarDungGio"
        style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ratingBarChatLuong"
        android:layout_below="@+id/Phuc_vu"
        android:layout_marginTop="22dp"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:id="@+id/dung_gio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratingBarDungGio"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:text="Đúng giờ     :" />

    <RatingBar
        android:id="@+id/ratingBarChatLuong"
        style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar4"
        android:layout_toEndOf="@+id/ratingBar4"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:id="@+id/chat_luong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dung_gio"
        android:layout_alignTop="@+id/ratingBarChatLuong"
        android:text="Chất lượng :"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tennhaxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Tên nhà xe"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ChapNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:text="Chấp Nhận" />

    <TextView
        android:id="@+id/trungBinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ChapNhan"
        android:layout_alignBottom="@+id/ChapNhan"
        android:layout_toEndOf="@+id/tongThe"
        android:text="0/5"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <RatingBar
        android:id="@+id/ratingBar4"
        style="@android:style/Widget.Holo.Light.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/trungBinh"
        android:isIndicator="true"
        android:numStars="1"
        android:rating="1" />

    <TextView
        android:id="@+id/tongThe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/trungBinh"
        android:layout_alignBottom="@+id/trungBinh"
        android:layout_alignParentStart="true"
        android:text="Tổng thể :"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ImageView
        android:id="@+id/imageViewHinh"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>

